{
  "name": "node-boilerplate",
  "dependencies": {
    "@grpc/proto-loader": "^0.5.0",
    "@hapi/joi": "^15.0.1",
    "awilix": "^4.2.2",
    "fs-extra": "^7.0.1",
    "grpc": "^1.20.2",
    "jaeger-client": "^3.14.4",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "opentracing": "^0.14.3",
    "pg": "^7.10.0",
    "readline-sync": "^1.4.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "socket.io": "^2.2.0",
    "typeorm": "^0.2.17",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/hapi__joi": "^15.0.1",
    "@types/lodash": "^4.14.123",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.9",
    "@types/prettier": "^1.16.3",
    "@types/readline-sync": "^1.4.3",
    "@types/sinon": "^7.0.11",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/triple-beam": "^1.3.0",
    "@types/uuid": "^3.4.4",
    "mocha": "^6.1.4",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2",
    "socket.io-client": "^2.2.0",
    "triple-beam": "^1.3.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "tsc --skipLibCheck && node build/tools/build.js",
    "watch": "docker-compose up builder",
    "docker-build": "./docker/build.sh",
    "docker-build-base": "docker build --build-arg=NPM_TOKEN=${NPM_TOKEN} -t brickvest-next:latest --target builder -f ./docker/dev/Dockerfile .",
    "docker-build-service": "docker build --build-arg=NPM_TOKEN=${NPM_TOKEN} -t brickvest-next-service:latest --target service -f ./docker/dev/Dockerfile .",
    "docker-build-prod": "docker build --build-arg=NPM_TOKEN=${NPM_TOKEN} -t=${APP_IMAGE} -f ./docker/prod/Dockerfile .",
    "gateway": "docker-compose up gateway",
    "spa": "docker-compose up spa",
    "logs": "docker-compose logs -f",
    "down": "docker-compose down -v",
    "integration-tests": "cd build && node ../node_modules/.bin/mocha \"integration-tests/**/*.integration.spec.js\"",
    "services-units": "cd build && node ../node_modules/.bin/mocha \"services/**/**/*.spec.js\" \"shared/**/**/*.spec.js\"",
    "integration": "docker-compose run --rm integration-tests",
    "units": "docker-compose run --rm js npm run services-units",
    "format": "docker-compose run --rm js ./node_modules/.bin/prettier --write \"**/**/*.ts\" \"!**/**/*.d.ts\"",
    "tslint": "docker-compose run --rm js ./node_modules/.bin/tslint --project './tsconfig.json' -c tslint.json",
    "shell": "docker-compose run --rm js sh",
    "generate-skeleton": "docker-compose run --rm js node ./build/tools create-project",
    "generate-client": "docker-compose run --rm js node ./build/tools from-proto --generator-type client",
    "generate-service": "docker-compose run --rm js node ./build/tools from-proto --generator-type service",
    "generate-interfaces": "docker-compose run --rm js node ./build/tools interfaces",
    "update-proto": "docker-compose run --rm builder node ./build/tools/build"
  }
}
